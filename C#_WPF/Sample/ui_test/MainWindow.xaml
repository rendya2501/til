<Window x:Class="ui_test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ui_test"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Content="矩形を追加" Click="AddRectangleButton_Click"/>
            <Button Content="円を追加" Click="AddEllipseButton_Click"/>
            <!-- <Button Content="関連を追加" Click="AddConnectionButton_Click"/> -->
        </StackPanel>
        <Canvas Width="1000" Height="1000" Background = "Yellow" Grid.Row="1" x:Name="MyCanvas"/>
    </Grid>
</Window>
